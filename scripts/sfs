#!/bin/sh

# Setup vars
	# Data home
	SFSMNT="/opt/sshfs-mnt"
	SFSARGS="$@"
	SDLOG="$(cat $SFSMNT/log)"
# Setup Functs
	# Start up sshfs
	SUSfs(){
		for CSMADDR in $SDLOG
		do
			sshfs -o transform_symlinks $CSMADDR:/ $SFSMNT/$CSMADDR
		done
	}
	# Make new dirs for sshfs
	MkSfsDir(){
		for CMDIR in $SFSARGS
		do
			mkdir $SFSMNT/$CMDIR
			echo $CMDIR >> $SFSMNT/log
		done
	}
	# Kill old prosses
	KlSfs(){
		for SDKL in $SDLOG
		do
			pkill -9 sshfs
			fusermount -uzq $SFSMNT/$SDKL
		done
	}
# Run everything
	mkdir $SFSMNT 2> /dev/null && MkSfsDir && SUSfs && exit

	if [ -z "$1" ]
	then
		KlSfs ; SUSfs || KlSfs
	elif [ "$1" != "-k" ]
	then
		KlSfs ; MkSfsDir && SUSfs || KlSfs
	else
		KlSfs || echo "Nothing to do"
	fi
